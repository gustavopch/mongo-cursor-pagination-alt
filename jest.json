{
  "verbose": true,
  "displayName": "unit-tests",
  "preset": "ts-jest",
  "bail": true,
  "testTimeout": 20000,
  "clearMocks": true,
  "testEnvironment": "node",
  "globalSetup": "<rootDir>/test/global-setup.ts",
  "globalTeardown": "<rootDir>/test/global-teardown.ts",
  "reporters": ["default"],
  "collectCoverageFrom": ["src/**/{!(index),}.ts"],
  "testMatch": ["<rootDir>/src/**/*.test.ts"]
}
